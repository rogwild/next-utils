{
  "compilerOptions": {
    "outDir": "./built",
    "allowJs": true,
    "target": "es5",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "~utils": ["./src"]
    }
  },
  "types": ["jest", "@testing-library/jest-dom"],
  "exclude": ["node_modules"],
  "include": ["./src/**/*", "dev"]
}
