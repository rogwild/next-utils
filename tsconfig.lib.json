{
  "compilerOptions": {
    "outDir": "./built",
    "allowJs": true,
    "target": "es6",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "downlevelIteration": true,
    "esModuleInterop": true
